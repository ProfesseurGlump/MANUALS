%%%%%%%%%%%%%%%%%%%%%%%%%%% RACCOURCIS EMACS %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newcommand{\gem}{GNU Emacs\xspace}
\newcommand{\ESC}{\texttt{ESC}\xspace}
\newcommand{\RET}{\texttt{RET}\xspace}
\newcommand{\DEL}{\texttt{DEL}\xspace}
\newcommand{\TAB}{\texttt{TAB}\xspace}
\newcommand{\SPC}{\texttt{SPC}\xspace}
\newcommand{\rep}[2]{\texttt{#1-#2}\xspace} % Par exemple M-x
\newcommand{\rec}[4]{\texttt{#1-#2 #3-#4}\xspace} % Par exemple C-x C-f

%% pour aller chercher les images
% PICS est le lien symbolique de chemin :
% /Users/macintoshhd/docApple/RoadMapiOS/IMG
% avec docApple lien symbolique de chemin :
% /Users/macintoshhd/Desktop/Xcode/DocApple/

\newcommand{\pic}[1]{/Users/macintoshhd/Desktop/PICS/#1} % avec 1
                                                         % nom de l'image
\newcommand{\ig}[2]{\includegraphics[scale = #1]{\pic{#2}}} 
% l'argument 1 sert au dimensionnement (uniquement par
% proportionnalité)
% l'argument 2 sert au nom de l'image

\newcommand{\pcs}[3]{pic#1chap#2sec#3} % pour nommer plus rapidement
% picIchapJsecK

% pour écrire en type machine
\newcommand{\tm}[1]{\texttt{#1}}

% pour aligner du texte

% à gauche 
\newcommand{\ag}[1]{{\flushleft #1}}

% à droite 
\newcommand{\ad}[1]{{\flushright #1}}

