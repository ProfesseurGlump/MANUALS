%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% REFERENCES  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%    raccourcis pour faire des références      %%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


% ANNEXES
\newcommand{\cfap}[1]{~\ref{App#1}}                       % pour les annexes
\newcommand{\cfapg}[1]{~\pageref{App#1}}                  % pour les pages
                                                          % des annexes

\newcommand{\cfaps}[2]{~\ref{App#1sec#2}}                 % pour les
                                                          % sections des 
                                                          % annexes
\newcommand{\cfapsg}[2]{~\pageref{App#1sec#2}}            % pour les pages des
                                                          % sections des annexes
 

\newcommand{\cfapss}[3]{~\ref{App#1sec#2subsec#3}}        % pour les
                                                          % sous-sections des
                                                          % annexes
\newcommand{\cfapssg}[3]{~\pageref{App#1sec#2subsec#3}}   % pour les pages des
                                                          % sous-sections
                                                          % des annexes

% CHAPITRES
\newcommand{\cfch}[1]{~\ref{chap#1}}                      % pour les chapitres
\newcommand{\cfchg}[1]{~\pageref{chap#1}}                 % pour les pages
                                                          % des chapitres

\newcommand{\cfchs}[2]{~\ref{chap#1sec#2}}                % pour les
                                                          % sections des 
                                                          % chapitres
\newcommand{\cfchsg}[2]{~\pageref{chap#1sec#2}}           % pour les pages des
                                                          % sections
                                                          % des
                                                          % chapitres 
 

\newcommand{\cfchss}[3]{~\ref{chap#1sec#2subsec#3}}       % pour les
                                                          % sous-sections des
                                                          % chapitres
\newcommand{\cfchssg}[3]{~\pageref{chap#1sec#2subsec#3}}  % pour les pages des
                                                          % sous-sections
                                                          % des chapitres

